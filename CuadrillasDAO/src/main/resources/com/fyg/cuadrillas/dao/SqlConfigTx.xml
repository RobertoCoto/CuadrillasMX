		</environment>
	</environments>
	<mappers>
	<mapper resource="com/fyg/cuadrillas/dao/CatalogoTx.xml" />
	<mapper resource="com/fyg/cuadrillas/dao/HerramientaTx.xml" />
	<mapper resource="com/fyg/cuadrillas/dao/PerfilTx.xml" />
