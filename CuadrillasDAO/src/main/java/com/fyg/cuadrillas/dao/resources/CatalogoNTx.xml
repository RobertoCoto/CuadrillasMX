<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="com.fyg.cuadrillas.dao.resources.CatalogoNTx">
<!-- Consulta-->
<select id="consultaPrueba" parameterType="prueba" resultType="prueba">
SELECT * FROM prueba WHERE id = #{idPrueba}
</select>

<!-- Consulta Catalogo-->
<select id="consultaCatalogo" parameterType="CatalogoOV" resultType="CatalogoOV">
SELECT catalogo.codigo AS codigo, catalogo.descripcion AS descripcion
FROM catalogo
INNER JOIN tipo_catalogo ON catalogo.tipo_catalogo = tipo_catalogo.tipo_catalogo
WHERE tipo_catalogo.orden = #{orden} AND catalogo.estatus =#{estatus}
</select>

<select id="consultaListaCatalogo" parameterType="catalogoOV" resultType="catalogoOV">
SELECT * FROM catalogo WHERE codigo = #{codigo}
</select>
	</mapper>