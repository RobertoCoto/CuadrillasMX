<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="com.fyg.cuadrillas.dao.resources.ConsultasCuadrillasDAO">

<!-- Consulta-->
<select id="consultaPrueba" parameterType="prueba" resultType="prueba">
SELECT * FROM prueba WHERE id = #{idPrueba}
</select>

<!-- Consulta Parametro-->
<select id="consultaParametro" parameterType="parametro" resultType="parametro">
SELECT valor,parametro FROM parametros WHERE parametro = #{parametro}
</select>

<!-- Consulta Perfil-->
<select id="consultaPerfil" parameterType="perfil" resultType="perfil">
SELECT id_perfil FROM perfil WHERE id_perfil = #{idPerfil}
</select>

<!-- Consulta Parametro-->
<select id="consultaUsuario" parameterType="usuario" resultType="usuario">
SELECT * FROM usuarios WHERE usuario = #{usuario}
</select>

<!-- Consulta Catalogo-->
<select id="consultaCatalogo" parameterType="CatalogoOV" resultType="CatalogoOV">
SELECT tipo_catalogo,descripcion,fecha_alta,fecha_ult_mod,estatus FROM catalogo WHERE codigo = #{codigo}
</select>

</mapper>