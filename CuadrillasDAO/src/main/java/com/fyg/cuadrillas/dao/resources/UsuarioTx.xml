<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="com.fyg.cuadrillas.dao.resources.UsuarioTx">
<!--- INSERTA EN LA TABLA USUARIO-->
<insert id="insertaUsuario" parameterType="usuario">
INSERT INTO usuarios(usuario,nombre,apellido_pat,apellido_mat,sexo,rfc,rfc_calculado,curp,fecha_nacimiento,id_perfil,contrasena,cambio_contrasena,fecha_alta,fecha_ult_mod,estatus)
VALUES(#{usuario},#{nombre},#{apellido_pat},#{apellido_mat},#{sexo},#{rfc},#{rfc_calculado},#{curp},#{fecha_nac},#{id_perfil},#{contrasena},#{cambio_contrasena},now(),now(),#{estatus})
</insert>

<!--- BAJA EN LA TABLA USUARIO-->

<update id="inactivaUsuario" parameterType="usuario">
UPDATE usuarios SET
estatus = #{estatus},
fecha_ult_mod = now()
WHERE usuario = #{usuario}
</update>
</mapper>